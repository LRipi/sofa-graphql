{
  "openapi": "3.0.0",
  "info": {
    "title": "Example API",
    "version": "3.0.3"
  },
  "paths": {
    "/api/drafts": {
      "get": {
        "operationId": "draftsQuery",
        "parameters": [],
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/posts": {
      "get": {
        "operationId": "postsQuery",
        "parameters": [],
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/user": {
      "get": {
        "operationId": "userQuery",
        "parameters": [],
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/create-draft": {
      "post": {
        "operationId": "createDraftMutation",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "body": {
                    "type": "string"
                  },
                  "authorId": {
                    "type": "integer",
                    "format": "int32"
                  }
                },
                "required": [
                  "title",
                  "body",
                  "authorId"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Post"
                }
              }
            }
          }
        }
      }
    },
    "/api/publish-draft": {
      "put": {
        "operationId": "publishDraftMutation",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "draftId": {
                    "type": "integer",
                    "format": "int32"
                  }
                },
                "required": [
                  "draftId"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Post"
                }
              }
            }
          }
        }
      }
    },
    "/api/update-draft": {
      "put": {
        "operationId": "updateDraftMutation",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "draftId": {
                    "type": "integer",
                    "format": "int32"
                  },
                  "title": {
                    "type": "string"
                  },
                  "body": {
                    "type": "string"
                  },
                  "authorId": {
                    "type": "integer",
                    "format": "int32"
                  }
                },
                "required": [
                  "draftId",
                  "title",
                  "body",
                  "authorId"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Post"
                }
              }
            }
          }
        }
      }
    },
    "/api/delete-draft": {
      "delete": {
        "operationId": "deleteDraftMutation",
        "parameters": [
          {
            "in": "query",
            "name": "draftId",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Post"
                }
              }
            }
          }
        }
      }
    },
    "/api/create-user": {
      "post": {
        "operationId": "createUserMutation",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "firstName": {
                    "type": "string"
                  },
                  "lastName": {
                    "type": "string"
                  }
                },
                "required": [
                  "firstName",
                  "lastName"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Query": {
        "type": "object",
        "required": [
          "drafts",
          "posts",
          "user"
        ],
        "properties": {
          "drafts": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Post"
            }
          },
          "posts": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Post"
            }
          },
          "user": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/User"
            }
          }
        }
      },
      "Post": {
        "type": "object",
        "required": [
          "id",
          "title",
          "body",
          "published",
          "authorId",
          "author"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32",
            "description": "The id of the post"
          },
          "title": {
            "type": "string",
            "description": "The title of the post"
          },
          "body": {
            "type": "string",
            "description": "The body of the post"
          },
          "published": {
            "type": "boolean",
            "description": "Parameter if the post is public or not"
          },
          "authorId": {
            "type": "integer",
            "format": "int32",
            "description": "The author ID of the post"
          },
          "author": {
            "$ref": "#/components/schemas/User",
            "description": "The author who wrote the post"
          }
        },
        "description": "This type describe the post that could exist on the database."
      },
      "User": {
        "type": "object",
        "required": [
          "id",
          "firstName",
          "lastName"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32",
            "description": "The id of the user"
          },
          "firstName": {
            "type": "string",
            "description": "The first name of the user"
          },
          "lastName": {
            "type": "string",
            "description": "The last name of the post"
          }
        },
        "description": "This type describe the users that has sign up on the application."
      },
      "Mutation": {
        "type": "object",
        "required": [
          "createDraft",
          "publishDraft",
          "updateDraft",
          "deleteDraft",
          "createUser"
        ],
        "properties": {
          "createDraft": {
            "$ref": "#/components/schemas/Post"
          },
          "publishDraft": {
            "$ref": "#/components/schemas/Post"
          },
          "updateDraft": {
            "$ref": "#/components/schemas/Post"
          },
          "deleteDraft": {
            "$ref": "#/components/schemas/Post"
          },
          "createUser": {
            "$ref": "#/components/schemas/User"
          }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ]
}